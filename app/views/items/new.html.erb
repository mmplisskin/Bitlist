<h1>Post an Item</h1>
	<%= form_for @item do |f| %>
	<div>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>
	<div>
		<%= f.label :location %>
		<%= f.text_field :location %>
	</div>
	<div>
		<%= f.label :description %>
		<%= f.text_field :description %>
	</div>
	<div>
		<%= f.label :phone_number %>
		<%= f.text_field :phone_number %>
	</div>
  <div>
		<%= f.label :price %>
		<%= f.text_field :price %>
	</div>
	<%= f.submit "Post!" %>



<% end -%>


