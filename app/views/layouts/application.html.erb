<!DOCTYPE html>
<html>
<head>
  <title>Bitlist.org</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'favicon-bitcoin.ico' %>
  <link rel="stylesheet" href="animate.min.css">
  <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
  <script src="//maps.googleapis.com/maps/api/js"></script>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">


  <%= javascript_include_tag 'application', 'data-turbolinks-track' => false %>
  <meta name="viewport" content="width=device-width, initial-scale=1">

</head>

  <body>
    <header>

      <nav class="navbar navbar-inverse navbar-static-top">


        <div class="navbar">
          <div class="container">

          <br>
          <br>
              <div class="row ">
                <div class="col-md-8">

                <div id="shine">

                  <div id="logo" class="col-md-2" >

                      <div id="coin">

                          <%= link_to "", root_path, class: 'fa fa-btc b'  %>

                      </div>

                      <div class="logo-text"><%= link_to "Bitlist", root_path %>
                      </div>
                  </div>

                </div>

              </div>
                <div class="col-md-8">
                </div>
              <div class="col-md-3">
                  <br>

                <div class="form-group">

                  <%= form_tag search_items_path, method: :get do |f| %>
                  <%= text_field_tag :search, nil, placeholder: 'search', class:"form-control input-sm" %>
                  <br>
                  <%= text_field_tag :location, nil, placeholder: 'near', class:"form-control input-sm" %>
                  <br>

                  <center><%= submit_tag "search", class: 'btn btn-primary navbar-btn-sm'  %></center>


                  </p>
                  <% end %>
                </div>
                </div>
              </div>
            </div>
          </div>



              <div class="col-md-5">
            </div>
            <div class="col-md-2">
            <div class="row ">
            <ul class="nav navbar-nav">

              <li>
                <%= link_to "About", static_pages_about_path%>
              </li>
              <li>
                <%= link_to "Post Item", new_item_path %>
              </li>
                <% if current_user%>
              <li>
                <%= link_to current_user.name + "'s Account",users_path%>
              </li>
                <% else %>
              <li>
                <%= link_to "Account", users_path %>
              </li>
              <% end %>

              <li> <% if current_user %>
              <%= link_to 'Log Out', logout_path, method: :delete %></li>
              <% end %>
            </ul>
          </div>
          </div>



      </nav>
    </header>


  <div class="container">




  <% if flash[:error] %>
  <i class="fa fa-spinner fa-pulse"></i>
  <%#= flash.inspect %>
  <% flash.each do |error, message| %>
  <div class="alert alert-danger" role="alert" id="flash" ><% error %><%= message %></div>
  <% end %>
  <% end %>

  <% if flash[:notice] %>
  <% flash.each do |notice, message| %>
  <div class="alert alert-info" id="flash" role="alert"><%= flash[:notice] %></div>
  <% end %>
  <% end %>
  <%= yield %>
  </div>

  </div>

  </body>
</html>
