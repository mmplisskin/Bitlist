<!DOCTYPE html>
<html>
<head>
  <title>Bitlist.org</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'favicon-bitcoin.ico' %>
  <link rel="stylesheet" href="animate.min.css">
  <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
  <script src="//maps.googleapis.com/maps/api/js"></script>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">


  <%= javascript_include_tag 'application', 'data-turbolinks-track' => false %>
  <meta name="viewport" content="width=device-width, initial-scale=1">

</head>

  <body>

    <header>

      <nav class="navbar navbar-inverse navbar-static-top">


        <div class="navbar">
          <div class="container">

          <br>
          <br>
              <div class="row ">
                <div class="col-md-8">

                <div id="shine">

                  <div id="logo" class="col-md-2" >

                      <div id="coin">

                          <%= link_to "", root_path, class: 'fa fa-btc b'  %>

                      </div>

                      <div class="logo-text"><%= link_to "Bitlist", root_path %>
                      </div>
                  </div>

                </div>

              </div>
                <div class="col-md-8">
                </div>
              <div class="row">
              <div class="col-lg-4">
                  <br>

                <div class="input-group">
                  <div class="row">

                  <%= form_tag search_items_path, method: :get, :class => "form-inline" do %>
                      <%= text_field_tag :search, nil, placeholder: 'search' %>
                      <%= text_field_tag :location, nil, placeholder: 'near' %>
                      <%= submit_tag "Search", name: nil, class: "btn btn-default" %>
                  <% end %>
                  <br>
                  <br>
                  <div class="col-md-4">
                  </div>
                </div>
                </div>
                </div>
              </div>
              </div>
            </div>
          </div>



              <div class="col-md-4">
            </div>

            <div class="row ">

              <center class=navbar-nav>
                <div class="col-md-12">

                <span>
                  <h2>

                <%= link_to "About", static_pages_about_path%>
              </span>
            </h2>
              <span>
                <h2>
                <%= link_to "Post", new_item_path%>
              </span>
            </h2>
                <% if current_user%>
              <span>
                <h2>
                <%= link_to current_user.name + "'s Account",users_path%>
              </span>
            </h2>
                <% else %>
              <span>
                <h2>
                <%= link_to "Account", users_path %>
              </span>
            </h2>
                <% end %>
              <span>
                <h2>
              <% if current_user %>
                <%= link_to 'Log Out', logout_path, method: :delete %>
              <% end %>
            </span>
          </h2>
          </div>
          </center>


          </div>
        </center>



      </nav>
    </header>






  <% if flash[:error] %>

  <%#= flash.inspect %>
  <% flash.each do |error, message| %>

  <div class="alert alert-danger" class="fa fa-spinner fa-pulse" role="alert" id="flash" ><% error %><%= message %>&nbsp&nbsp<i class="fa fa-exclamation-triangle"></i></div>
  <% end %>
  <% end %>

  <% if flash[:notice] %>
  <% flash.each do |notice, message| %>
  <div class="alert alert-info" id="flash" role="alert"><%= flash[:notice] %></div>
  <% end %>
  <% end %>


  <% if flash[:succes] %>
  <% flash.each do |success, message| %>
  <div class="alert alert-success" id="flash" role="alert"><%= flash[:sucess]%></div>
  <% end %>
  <% end %>
</div>


  <%= yield %>


</body>

</html>
