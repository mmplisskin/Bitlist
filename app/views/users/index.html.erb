


<% if current_user %>

  <h1><%= "Hi "+ "#{current_user.name}"%></h1>
  <h4>  <%= link_to "Update Account", edit_user_path(current_user)%></h4>

    <% if  @current_user.items.all.size == 0 %>
            You have not created any items :(

      <% else %>
            Here are your bits!
            <%@current_user.items.each do |item|%>

              <p><%=link_to item.name, category_item_path(item.category_id,item.id) %>
                  <%=link_to "edit", edit_category_item_path(item.category_id,item.id) %></p>
          <% end %>
    <% end %>

    <% if @current_user.admin? %>
    <h1> Users</h1>

      <%@users.each do |user| %>

        <ul><h2><%=link_to user.name, user_path(user)%></h2>
        <%=link_to "Destroy user they are bad person", user, method: :delete,
                                                                  data: {confirm: "are you sure?"}%></ul>


        <% end %>
        <%end%>


<% else %>
  <%= link_to 'Log In', login_path %>
  <%= link_to 'Sign Up', new_user_path %>
<% end %>
